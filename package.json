{
  "name": "crud-api",
  "version": "1.0.0",
  "description": "CRUD API",
  "homepage": "https://github.com/YuliiaZas/crud-api#readme",
  "bugs": {
    "url": "https://github.com/YuliiaZas/crud-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YuliiaZas/crud-api.git"
  },
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon",
    "start:prod": "npm run build && node build/index.js",
    "start:multi": "ts-node multi.ts",
    "start:multi:prod": "npm run build && node build/multi.js",
    "start": "npm run start:dev",
    "build": "tsc && npm run copy-data",
    "copy-data": "mkdir -p build/src/data && cp src/data/db.json build/src/data/db.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^22.15.14",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
